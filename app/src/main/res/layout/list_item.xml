<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="297dp"
    app:layout_constraintHeight_percent="1.891"
    android:layout_margin="7dp"
    android:background="@drawable/item_background"
    android:elevation="4dp"
    android:outlineSpotShadowColor="@color/item_shadow_color">

    <ImageView
        android:id="@+id/drug_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintWidth_percent="0.8471"
        app:layout_constraintHeight_percent="0.2626"
        android:layout_margin="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/drug_title_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="@id/drug_image"
        app:layout_constraintStart_toStartOf="@id/drug_image"
        app:layout_constraintTop_toBottomOf="@id/drug_image"
        tools:text="ВРЕДИТЕЛИ ЗЕРНОВЫХ КУЛЬТУР" />

    <TextView
        android:id="@+id/drug_description_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:maxLines="5"
        android:ellipsize="end"
        android:textColor="@color/grey"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@id/drug_title_tv"
        app:layout_constraintStart_toStartOf="@id/drug_title_tv"
        app:layout_constraintTop_toBottomOf="@id/drug_title_tv"
        tools:text="На зернобобовых культурах питаются разнообразные многоядные и еще всякие гадости...." />
</androidx.constraintlayout.widget.ConstraintLayout>